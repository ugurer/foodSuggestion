{
  "expo": {
    "name": "Yemek Öneri",
    "slug": "suggest-food",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "suggest-food",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F172A"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.suggestfood.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Konumunuza göre size en uygun yemekleri önerebilmemiz için konum izni gereklidir.",
        "NSLocationAlwaysUsageDescription": "Konumunuza göre size en uygun yemekleri önerebilmemiz için konum izni gereklidir."
      }
    },
    "android": {
      "package": "com.suggestfood.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F172A"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Konumunuza göre size en uygun yemekleri önerebilmemiz için konum izni gereklidir."
        }
      ],
      [
        "expo-notifications",
        {
          "sounds": []
        }
      ]
    ]
  }
}